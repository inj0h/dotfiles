#!/bin/bash
#
# Filename:    connect_the_dots
# Description: Softly link all *nix configuration files.
#

set -e

#
# Dependencies
#
if [ -f $HOME/dotfiles/lib/lib.bash ]; then
    echo "Dependencies found. Proceeding..."
    source $HOME/dotfiles/lib/lib.bash
else
    echo "Error: could not find dependent script(s)."
    exit 1
fi

#
# Variables
#
DOTFILES="$HOME/dotfiles/"
LNFLAGS=''

#
# Script
#
echo_red "Screening directory..."

# Check for ~/bin
if [ ! -d $HOME/bin ]; then
    echo_red "Error: ~/bin not found.\nCreating..."

    mkdir $HOME/bin

    echo_green "Done."
fi

echo_green "Done."

# Specific Nix
echo_red "`uname -s` kernel detected.\nLinking files specific to system..."

if [[ `uname -s` == 'Darwin' ]]; then
    LNFLAGS="-shfv"
elif [[ `uname -s` == 'Linux' ]]; then
    LNFLAGS="-sTfv"
    dot_connect $LNFLAGS "redshift*" $HOME/.config
fi

echo_green "Done."

# Shared Nix
echo_red "Linking shared *nix files..."

dot_connect $LNFLAGS $DOTFILES"bash*"    $HOME         dot
dot_connect $LNFLAGS $DOTFILES"emacs.d"  $HOME         dot
dot_connect $LNFLAGS $DOTFILES"rgignore" $HOME/.config dot
dot_connect $LNFLAGS $DOTFILES"tmux*"    $HOME         dot

echo_green "Done.\nAll dotfiles linked. Have a nice day."
