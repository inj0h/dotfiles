#!/bin/bash
#
# Filename: init
# Note:     Dead simple script for setting up directories on new systems.
#

set -e

#
# Dependencies
#
if [ -f $HOME/dotfiles/lib/lib.bash ]; then
    echo "Dependencies found. Proceeding..."
    source $HOME/dotfiles/lib/lib.bash
else
    echo "Error: could not find dependent script(s)."
    exit 1
fi

#
# Variables
#
MYROOM="$HOME/my_room"

#
# Script
#
echo "Creating directories..."

dir_make $MYROOM
dir_make $MYROOM/dev
dir_make $MYROOM/doc
dir_make $MYROOM/etc
dir_make $MYROOM/img
dir_make $MYROOM/music
dir_make $MYROOM/video

echo "All directories created."

command -v tree > /dev/null && echo_green "Printing tree..." &&
    tree -aCL 1 $MYROOM

echo "Have a nice day."
